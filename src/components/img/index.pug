mixin Img(param)
    - param.src = param.src ? `/src/sites/${siteName}/${param.src}` : ''
    - param.class = param.class ? param.class : ''
    - param.alt = param.alt ? param.alt : 'Описание изображения' 
    if (param.src)
        img(src=param.src, alt=param.alt, class=param.class)
    else
        span Тут должна быть картинка