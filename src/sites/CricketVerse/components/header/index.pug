mixin Header(param)
    - 
        const headerLinks = [
            {
              href: '/',
              text: 'Home',
            },
            {
              href: '/how-to-play/',
              text: 'How to Play',
            },
            {
              href: '/download/',
              text: 'Download app',
            },
            {
              href: `/responsible-play/`,
              text: 'Responsible Play',
            },
            {
              href: '/contact/',
              text: 'Contact',
            }
        ]

    header.header
        .container.header__container
            .header__logo
                +Link({
                    href: '/',
                    text: 'CricketVerse'
                })
            ul.header__list
                each link in headerLinks
                    li.header__list-item
                        +Link({
                            href: link.href,
                            text: link.text
                        })
            +Nav-mob({})
                            