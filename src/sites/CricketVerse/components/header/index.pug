mixin Header(param)
    - 
        const headerLinks = [
            {
              href: 'index.html',
              text: 'Home',
            },
            {
              href: 'how-to-play.html',
              text: 'How to Play',
            },
            {
              href: 'download.html',
              text: 'Download app',
            },
            {
              href: 'contact.html',
              text: 'Contact',
            },
            {
              href: `responsible-play.html`,
              text: 'Responsible Play',
            }
        ]

    header.header
        .container.header__container
            .header__logo
                +Link({
                    href: 'index.html',
                    text: 'CricketZone'
                })
            ul.header__list
                each link in headerLinks
                    li.header__list-item
                        +Link({
                            href: link.href,
                            text: link.text
                        })
            +Nav-mob({})
                            