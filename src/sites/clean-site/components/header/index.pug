mixin Header(param)
    - 
        const headerLinks = [
            {
              href: 'index.html#consultation',
              text: 'Consultation',
            },
            {
              href: 'index.html#whyus',
              text: 'Why us',
            },
            {
              href: 'index.html#properties',
              text: 'Properties',
            },
            {
              href: 'index.html#contact',
              text: 'Contact us',
            },
            {
              href: `services.html`,
              text: 'Services',
            },
        ]

    header.header
        .container.header__container
            .header__logo
                +Link({
                    href: 'index.html',
                    text: 'Grand Residence'
                })
            ul.header__list
                each link in headerLinks
                    li.header__list-item
                        +Link({
                            href: link.href,
                            text: link.text
                        })
            .burger
                span
                span
                span
            .menu
                .menu__close
                    span x
                ul.menu__list
                    each link in headerLinks
                        li 
                            +Link({
                                href: link.href,
                                text: link.text
                            })
                            