mixin Gallery()
    section.container.cricketleague__gallery
        h2 Gallery
        .container__slider 
            .slider 
                .slide 
                    +Img({
                        src: 'img/banner.jpg',
                        alt: 'Cricketleague'
                    })
                    +Img({
                        src: 'img/reviews.jpg',
                        alt: 'CricketZone reviews'
                    })
                .slide 
                    +Img({
                        src: 'img/cricketzone.jpg',
                        alt: 'CricketZone reviews'
                    })
                    +Img({
                        src: 'img/htp-banner.jpg',
                        alt: 'How to Play CricketZone',
                        class: 'how-to-play-banner__bg'
                    })
                .slide 
                    +Img({
                        src: 'img/ball-banner.jpg',
                        alt: 'Score'
                    })
                    +Img({
                        src: 'img/score.jpg',
                        alt: 'Score'
                    })
            .slider-controls 
                .prev-arrow <
                .next-arrow >