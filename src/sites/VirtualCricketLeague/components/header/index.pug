mixin Header(param)
    - 
        const headerLinks = [
            {
              href: 'index.html',
              text: 'Home',
            },
            {
              href: 'how-to-play.html',
              text: 'How to Play',
            },
            {
              href: 'balls-systems.html',
              text: 'Balls System',
            },
            {
              href: 'contact.html',
              text: 'Contact',
            },
            {
              href: `terms-conditions.html`,
              text: 'Terms and conditions',
            },
            {
              href: `privacy-policy.html`,
              text: 'Privacy policy',
            }
        ]

    header.header
        .container.header__container
            .header__logo
                +Link({
                    href: 'index.html',
                    text: 'VirtualCricketLeague'
                })
            ul.header__list
                each link in headerLinks
                    li.header__list-item
                        +Link({
                            href: link.href,
                            text: link.text
                        })
            +Nav-mob({})
                            