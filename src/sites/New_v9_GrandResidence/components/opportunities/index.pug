mixin Opportunities()
    section.opportunities.container
        .opportunities__left
            +Img({
                src: 'img/opportunities.jpg',
                alt: 'Great Opportunities'
            })
        .opportunities__right
            .opportunities__title Great Opportunities in Grand Residence
