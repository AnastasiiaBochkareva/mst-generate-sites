mixin Properties()
    section.container.properties(id='properties')  
        h2.title-sm Popular properties
        ul.properties__list
            li.properties__list-item
                .properties__img
                    +Img({
                        src: 'img/penthouseCityCenter.jpg',
                        alt: 'penthouseCityCenter'
                    })
                .title-sm Penthouse in the City Center
                    .subtitle luxurious view, panoramic windows, designer renovation.
            li.properties__list-item
                .properties__img
                    +Img({
                        src: 'img/lakefrontVilla.jpg',
                        alt: 'lakefrontVilla'
                    })
                .title-sm Lakefront Villa
                    .subtitle secluded location, private dock, picturesque landscapes.
            li.properties__list-item
                .properties__img
                    +Img({
                        src: 'img/luxurySeasideApartments.jpg',
                        alt: 'luxurySeasideApartments'
                    })
                .title-sm Luxury Seaside Apartments
                    .subtitle premium service, gated community, ocean view.
            li.properties__list-item
                .properties__img
                    +Img({
                        src: 'img/commercialSpaceBusinessDistrict.jpg',
                        alt: 'commercialSpaceBusinessDistrict'
                    })
                .title-sm Commercial Space in the Business District
                    .subtitle ideal for businesses, well-developed infrastructure.






