mixin Header(param)
    - 
        const headerLinks = [
            {
              href: '/',
              text: 'Home',
            },
            {
              href: '#gameplay',
              text: 'Gameplay',
            },
            {
              href: '#levels',
              text: 'Levels',
            },
            {
              href: `#creators`,
              text: 'Creators',
            }
        ]

    header.header
        .container.header__container
            .header__logo
                +Link({
                    href: '/',
                    text: 'ChickenGame'
                })
            ul.header__list
                each link in headerLinks
                    li.header__list-item
                        +Link({
                            href: link.href,
                            text: link.text
                        })
            button(id="theme-toggle" class='btn btn-color') Light Mode
            +Nav-mob({})
                            